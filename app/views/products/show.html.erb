<h1><%= "#{@product.name.capitalize}" %></h1>
  <%= @product.name %> | <%= price_in_dollars(@product.price)%> | <%= @product.description %></li>
<br>
<%= link_to "Edit", edit_product_path %> | <%= link_to("Delete", product_path, method: :delete, data: {confirm: "Are you sure you want to delete this product?"})  %>

<ul>
  <% @reviews.each do |review| %>
  <li><%= review.comment %> | <%= review.created_at %></li>
  <% end %>
</ul>


<%= form_for ([@product, @review]) do |f| %>
  <% if @review.errors.any? %>
    <div id = "error_explanation">
      <p><%= pluralize(@review.errors.count, "error") %>prohibited this review from being saved: </p>
      <ul>
        <% @reviews.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end  %>

  <p>
    <%= f.label :comment, "New Review" %><br />
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
